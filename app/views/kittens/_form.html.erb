<% if @action == "create" %>
	<%= form_for @kitten, url: {action: "create"} do |f| %>
		<%= label_tag(:name, "Kitten's Name:") %>
		<%= f.text_field :name %>
		<br />
		<%= label_tag(:age, "Age:") %>
		<%= f.number_field :age %>
		<br />
		<%= label_tag(:cuteness, "Cuteness:") %>
		<%= f.number_field :cuteness %>
		<br />
		<%= label_tag(:softness, "Softness:") %>
		<%= f.number_field :softness %>
		<br />
		<%= f.submit "Submit" %>
	<% end %>
<% else %>
	<%= form_for @kitten do |f| %>
		<%= label_tag(:name, "Kitten's Name:") %>
		<%= f.text_field :name %>
		<br />
		<%= label_tag(:age, "Age:") %>
		<%= f.number_field :age %>
		<br />
		<%= label_tag(:cuteness, "Cuteness:") %>
		<%= f.number_field :cuteness %>
		<br />
		<%= label_tag(:softness, "Softness:") %>
		<%= f.number_field :softness %>
		<br />
		<%= f.submit "Submit" %>
	<% end %>
<% end %>
