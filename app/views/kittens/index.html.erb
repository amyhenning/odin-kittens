<div id="hero">

</div>

<% @kittens.each do |kitten| %>
	<div class="cat-box">
		<h1><%= link_to kitten.name, kitten_path(kitten.id) %></h1>
		<p>Age: <%= kitten.age %></p>
		<p>Cuteness: <%= kitten.cuteness %></p>
		<p>Softness: <%= kitten.softness %></p>
		<p>
			<%= link_to "Edit", edit_kitten_path(kitten) %> | 
			<%= link_to "Delete", kitten_path(kitten), method: :delete, data: {confirm: 'Are you sure you want to delete this kitten?'} %>
		</p>
	</div>
<% end %>